@using System.Linq
@model LoginViewModel
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="login-wrapper">
    <div class="bg-pic gradient-black">
        <div class="bg-caption text-white p-l-20 m-b-20">
            <h1 class="semi-bold text-white text-uppercase">
                Tickets Cinema
            </h1>
            <p class="small">
                
            </p>
        </div>
    </div>

    <div class="login-container bg-white">
        <div class="p-l-50 p-r-50 p-t-50 m-t-30 sm-p-l-15 sm-p-r-15 sm-p-t-40">
            <h2 class="p-t-25">Ticketscinema</h2>
            <p class="mw-80 m-t-5">Sign in to your account</p>

            <form id="form-login" class="p-t-10" role="form" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <div class="controls">
                        <input type="email" asp-for="Email" placeholder="Your Email" class="form-control" required="" aria-required="true">
                    </div>
                </div>

                <div class="form-group">
                    <div class="controls">
                        <input type="password" class="form-control" asp-for="Password" placeholder="Password" required="" aria-required="true">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 no-padding">
                        <div class="form-check">
                            <input type="checkbox" id="rememberme" asp-for="RememberLogin">
                            <label for="rememberme">Remember me</label>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex align-items-center justify-content-end">
                        <button type="submit" aria-label="" class="btn btn-primary m-t-10">Sign in</button>
                    </div>
                </div>
                <div class="m-b-5 m-t-30">
                    <a asp-action="ForgotPassword" class="normal">Lost your password?</a>
                </div>
                <div>
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="normal">Not a member yet? Signup now.</a>
                </div>
            </form>

